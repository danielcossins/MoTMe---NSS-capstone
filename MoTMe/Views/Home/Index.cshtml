@{
    ViewBag.Title = "Home Page";
    //Layout = "~/Views/Shared/MoTMe_layout.cshtml";
}
<div ng-controller="IndexCtrl">
<div class="row">
    <div class="col-sm-3">
        <h1>contacts</h1>
        <div ng-repeat="contact in contacts" ng-click="setClickedContact(contact)" ng-if="user.Id != contact.Id">
            <h3>{{contact.Name}}</h3>
        </div>
        @*<h3 ng-repeat="contact in contacts">{{contact.name}}</h3>*@
    </div>
    <div class="col-sm-6">
        <h1>messages</h1>
        <h2>{{clickedContact.Name}}</h2>
        <div class="panel panel-body" ng-repeat="message in messages">
            <h3 ng-if="message.AuthorId == user.Id">You</h3>
            <h3 ng-if="message.AuthorId == clickedContact.Id">{{clickedContact.Name}}</h3>
            <h6>{{message.Date}}</h6>
            <h4>{{message.Body}}</h4>
        </div>
        <br />
        <br />
        <br />
        <div id="chat" ng-if="clickedContact != undefined">
            <input type="text" class="" id="text" ng-model="body"/>
            <button id="button" class="btn btn-default" ng-click="AddMessage(body)">Send</button>
        </div>
        <h3 ng-if="clickedContact == undefined">Click a user to message</h3>
    </div>
    <div class="col-sm-3">
        <h1>alerts</h1>
    </div>
</div>
</div>